<%- include('../partials/header', { title: title }) %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1><%= title %></h1>
  <a href="/admin/users/add" class="btn btn-success">Add New User</a>
</div>

<% if (users.length > 0) { %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>TOTP Secret (Partial)</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.totpSecret.substring(0, 6) %>...</td>
          <td>
            <a href="/admin/users/<%= user.id %>/permissions" class="btn btn-sm btn-info">Manage Permissions</a>
            </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <p class="text-muted">No users found. <a href="/admin/users/add">Add one now!</a></p>
<% } %>

<%- include('../partials/footer') %>