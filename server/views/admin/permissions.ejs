<%- include('../partials/header', { title: title }) %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1><%= title %></h1>
  <a href="/admin/permissions/add" class="btn btn-success">Add New Permission</a>
</div>

<% if (permissions.length > 0) { %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% permissions.forEach(permission => { %>
        <tr>
          <td><%= permission.id %></td>
          <td><%= permission.name %></td>
          <td><%= permission.description || 'N/A' %></td>
          <td>
            <button class="btn btn-sm btn-secondary" disabled>Edit (Not Implemented)</button>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <p class="text-muted">No permissions found. <a href="/admin/permissions/add">Add one now!</a></p>
<% } %>

<%- include('../partials/footer') %>